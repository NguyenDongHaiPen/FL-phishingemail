{
  "manifest_version": 2,
  "name": "Phishing Email Trainer",
  "version": "1.0",
  "description": "Labels 10 emails as phishing/safe and exports them for training.",
  "permissions": ["menus", "storage", "messagesRead", "accountsRead", "messagesModify", "downloads"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Phishing Trainer",
    "default_icon": "icon.jpg",
    "default_popup": "popup.html"
  },
  "applications": {
    "gecko": {
      "id": "trainer@example.com"
    }
  }
}
